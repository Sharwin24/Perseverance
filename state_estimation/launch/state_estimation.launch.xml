<launch>
  <arg name="simulate_imu" description="Simulate IMU data" default="false"/>
  <node pkg="state_estimation" exec="state_estimator" name="state_estimator" output="screen">
    <param from="$(find-pkg-share state_estimation)/config/state_estimation_config.yaml"/>
    <param name="use_sim_time" value="false"/>
  </node>
  <node pkg="sensors" exec="simulated_imu" name="simulated_imu" output="screen" if="$(var simulate_imu)">
    <param from="$(find-pkg-share sensors)/config/sensors_config.yaml"/>
    <param name="use_sim_time" value="false"/>
  </node>
  <include file="$(find-pkg-share sensors)/launch/sensors.launch.xml"/>
</launch>